extends ../_layout

block app-title
    | Create Event | EventManagementSystem

block vars
   - var bodyClass = 'register';

block content
    .top-container
        .inner-bg
            .container
                .row
                    .col-sm-8.col-sm-offset-2.text
                    h1
                        strong Event creator
                    .description
                        p 
                .row
                    .col-sm-8.register-form-wrapper
                        .form-box
                            .form-top
                                .form-top-left
                                    h3 Create your own event
                                    p Fill in the form below:
                                .form-top-right
                                   i.fa.fa-pencil
                            .form-bottom

                                #error-container.alert.alert-danger
                                    strong The following errors need to be corrected:
                                    ul
                                form(role="form" action="" method="post" class="registration-form" id="user-create-form")
                                    .form-group
                                        label(class="sr-only" for="form-username")
                                        input(type="text"
                                              name="name"
                                              placeholder="Name..."
                                              class="form-username form-control"
                                              id="form-username")
                                        span.error.error-username
                                    .form-group
                                        label(class="sr-only" for="form-email") 
                                        | Category: 
                                        select(name="eventType")
                                            each eventType in eventTypes
                                                option(value= eventType.name)= eventType.name
                                        
                                        span.error.error-email
                                    .form-group
                                        label(class="sr-only" for="form-password")
                                        | Country: 
                                        select(name="country")
                                            each country in countries
                                                option(value= country.name)= country.name
                                        span.error.error-password
                                    .form-group
                                        label(class="sr-only" for="form-password")
                                        | City: 
                                        select(name="city")
                                            each city in cities
                                                option(value= city.name)= city.name
                                        span.error.error-password
                                    .form-group
                                        label(class="sr-only" for="form-password")
                                        input(type="text"
                                              name="address"
                                              placeholder="Address.."
                                              class="form-password form-control"
                                              id="form-password")
                                        span.error.error-password
                                    .form-group
                                        label(class="sr-only" for="form-first-name")
                                        input(type="text"
                                              name="description"
                                              placeholder="Description..."
                                              class="form-first-name form-control"
                                              id="form-first-name")
                                        span.error.error-firstname
                                    .form-group
                                        label(class="sr-only" for="form-last-name")
                                        input(type="text"
                                              name="dateOfEvent"
                                              placeholder="Date..."
                                              class="form-last-name form-control"
                                              id="form-last-name")
                                        span.error.error-lastname
                                    .form-group
                                        label(class="sr-only" for="form-age")
                                        input(type="text"
                                              name="coverUrl"
                                              placeholder="Cover Url.." 
                                              class="form-age form-control" 
                                              id="form-age")
                                        span.error.error-age
                                    .form-group
                                        label(class="sr-only" for="form-age")
                                        input(type="text"  
                                              name="capacity" 
                                              placeholder="Capacity.." 
                                              class="form-age form-control" 
                                              id="form-age")
                                        span.error.error-age
                                    button(type="button" class="btn" id="create-button") Create Event
block specificJs
    script(src="/static/scripts/utils/validator.js")
    script(src="/static/scripts/events/create-event.js")
